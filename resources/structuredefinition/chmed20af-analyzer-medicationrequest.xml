      </telecom>
   </contact>
   <description value="Profile for the Analyzer MedicationStatement (Medication Card document)"/>
   <fhirVersion value="4.0.1"/>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="MedicationRequest"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/MedicationRequest"/>
   <derivation value="constraint"/>
   <differential>
      <element id="MedicationRequest">
         <path value="MedicationRequest"/>
      </element>
      <element id="MedicationRequest.extension">
         <path value="MedicationRequest.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationRequest.extension:infoInputDocument">
         <path value="MedicationRequest.extension" />
         <sliceName value="infoInputDocument" />
         <short value="Information about the input document"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-infoinputdocument" />
         </type>
      </element>
      <element id="MedicationRequest.extension:treatmentplan">
         <path value="MedicationRequest.extension" />
         <sliceName value="treatmentplan" />
         <short value="Reference to the medication treatment plan"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-treatmentplan" />
         </type>
      </element>
      <element id="MedicationRequest.status">
         <path value="MedicationRequest.status"/>
         <short value="Status of the medication request"/>
      </element>
      <element id="MedicationRequest.intent">
         <path value="MedicationRequest.intent"/>
         <short value="Intent of the medication request"/>
      </element>
      <element id="MedicationRequest.medicationReference">
         <path value="MedicationRequest.medicationReference"/>
         <short value="Medication to be taken"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-medication"/>
         </type>
      </element>
      <element id="MedicationRequest.subject">
         <path value="MedicationRequest.subject"/>
