<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="chmed20af-analyzer-medicationstatement"/>
   <url value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-medicationstatement"/>
   <version value="0.1.0"/>
   <name value="AnalyzerMedicationStatement"/>
   <title value="Analyzer MedicationStatement"/>
   <status value="draft"/>
   <publisher value="IG eMediplan"/>
   <contact>
      <telecom>
         <system value="url"/>
         <value value="http://www.emediplan.ch"/>
      </telecom>
   </contact>
   <description value="Profile for the Analyzer MedicationStatement (Medication Card document)"/>
   <fhirVersion value="4.0.1"/>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="MedicationStatement"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/MedicationStatement"/>
   <derivation value="constraint"/>
   <differential>
      <element id="MedicationStatement">
         <path value="MedicationStatement"/>
      </element>
      <element id="MedicationStatement.extension">
         <path value="MedicationStatement.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationStatement.extension:infoInputDocument">
         <path value="MedicationStatement.extension" />
         <sliceName value="infoInputDocument" />
         <short value="Information about the input document"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-infoinputdocument" />
         </type>
      </element>
      <element id="MedicationStatement.extension:treatmentplan">
         <path value="MedicationStatement.extension" />
         <sliceName value="treatmentplan" />
         <short value="Reference to the medication treatment plan if the MedicationStatement is part of a Medication Card document"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-treatmentplan" />
         </type>
      </element>
      <element id="MedicationStatement.status">
         <path value="MedicationStatement.status"/>
         <short value="Status of the medication statement"/>
      </element>
      <element id="MedicationStatement.category">
         <path value="MedicationStatement.category"/>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.category.coding">
         <path value="MedicationStatement.category.coding"/>
         <short value="ATC code (Level 1) if possible"/>
      </element>
      <element id="MedicationStatement.category.coding.system">
         <path value="MedicationStatement.category.coding.system"/>
         <fixedUri value="http://www.whocc.no/atc"/>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.category.coding.code">
         <path value="MedicationStatement.category.coding.code"/>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.category.text">
         <path value="MedicationStatement.category.text"/>
         <short value="Note that no ATC Code is applied"/>
      </element>
      <element id="MedicationStatement.medicationReference">
         <path value="MedicationStatement.medicationReference"/>
         <short value="What medication was taken"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-medication"/>
         </type>
      </element>
      <element id="MedicationStatement.subject">
         <path value="MedicationStatement.subject"/>
         <short value="Who is/was taking  the medication"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-patient"/>
         </type>
      </element>
      <element id="MedicationStatement.informationSource">
         <path value="MedicationStatement.informationSource"/>
         <short value="The author of the medication statement"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-patient"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-practitioner"/>
         </type>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.derivedFrom">
         <path value="MedicationStatement.derivedFrom"/>
         <short value="History of changes"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-medicationstatement"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-medicationdispense"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-medicationrequest"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-observationpadv"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-analyzer-observationhistory"/>
         </type>
      </element>
      <element id="MedicationStatement.reasonCode">
         <path value="MedicationStatement.reasonCode"/>
         <short value="Reason for why the medication is being/was taken"/>
         <max value="1"/>
      </element>
      <element id="MedicationStatement.note">
         <path value="MedicationStatement.note"/>
         <short value="Annoation"/>
         <max value="1"/>
      </element>
      <element id="MedicationStatement.dosage">
         <path value="MedicationStatement.dosage"/>
         <slicing>
            <discriminator>
               <type value="profile"/>
               <path value="$this"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
         <short value="How the medication should be taken"/>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.dosage:nonstructured">
         <path value="MedicationStatement.dosage"/>
         <sliceName value="nonstructured"/>
         <short value="Free text dosage instructions"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-nonstructured"/>
         </type>
         <min value="1"/>
         <max value="1"/>
      </element>
      <element id="MedicationStatement.dosage:structured">
         <path value="MedicationStatement.dosage"/>
         <sliceName value="structured"/>
         <short value="Structured dosage instructions"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured"/>
         </type>
      </element>
   </differential>
</StructureDefinition>