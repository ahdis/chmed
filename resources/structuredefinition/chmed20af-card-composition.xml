			</type>
			<mapping>
				<identity value="CHMED16A"/>
				<map value="Auth"/>
			</mapping>
		</element>
		<element id="Composition.attester">
			<path value="Composition.attester"/>
			<slicing>
				<discriminator>
					<type value="value" />
					<path value="mode" />
