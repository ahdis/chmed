			<path value="Composition.section.entry"/>
			<slicing>
				<discriminator>
					<type value="profile"/>
					<path value="resolve()"/>
				</discriminator>
				<ordered value="false"/>
				<rules value="open"/>
			</slicing>
		</element>
		<element id="Composition.section.entry:bodyweight">
			<path value="Composition.section.entry"/>
			<sliceName value="bodyweight"/>
