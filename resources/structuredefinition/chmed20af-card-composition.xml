				</discriminator>
				<ordered value="false"/>
				<rules value="open"/>
			</slicing>
		</element>

		<!-- Section Original Representation-->
		<element id="Composition.section:originalRepresentation">
			<path value="Composition.section"/>
			<sliceName value="originalRepresentation"/>
			<short value="Original representation"/>
		</element>
