         <path value="MedicationRequest.subject"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://chmed20af.emediplan.ch/fhir/StructureDefinition/chmed20af-pre-patient"/>
         </type>
         <mustSupport value="true"/>
         <mapping>
            <identity value="CHMED16A"/>
            <map value="Patient"/>
